{
  "editor.formatOnSave": true, // format on save
  "editor.formatOnPaste": true, // format on paste
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "git.confirmSync": false,
  "git.autofetch": true,
  "editor.renderLineHighlight": "all", // highlight all occurrences of a selected word
  "editor.inlineSuggest.enabled": true,
  "security.workspace.trust.untrustedFiles": "open",
  "workbench.iconTheme": "vscode-icons",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "git.ignoreRebaseWarning": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "editor.cursorBlinking": "expand",
  "editor.fontWeight": "400",
  "editor.guides.bracketPairs": "active",
  "workbench.startupEditor": "none", // don't open any files on startup
  "editor.detectIndentation": true, // auto detect indentation
  "editor.dragAndDrop": false, // disable drag and drop
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  "liveServer.settings.donotVerifyTags": true,
  "editor.fontSize": 15,
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8"
  },
  "workbench.colorTheme": "Visual Studio 2019 Dark",
  "vscode_vibrancy.opacity": -1,
  "vscode_vibrancy.theme": "Catppuccin Mocha",
  "workbench.colorCustomizations": {
    // Terminal styling
    "terminal.background": "#090300cc",
    "terminal.foreground": "#A5A2A2",
    "terminalCursor.background": "#A5A2A2",
    "terminalCursor.foreground": "#A5A2A2",
    "terminal.ansiBlack": "#090300",
    "terminal.ansiBlue": "#01A0E4",
    "terminal.ansiBrightBlack": "#5C5855",
    "terminal.ansiBrightBlue": "#01A0E4",
    "terminal.ansiBrightCyan": "#B5E4F4",
    "terminal.ansiBrightGreen": "#01A252",
    "terminal.ansiBrightMagenta": "#A16A94",
    "terminal.ansiBrightRed": "#DB2D20",
    "terminal.ansiBrightWhite": "#F7F7F7",
    "terminal.ansiBrightYellow": "#6202fd",
    "terminal.ansiCyan": "#B5E4F4",
    "terminal.ansiGreen": "#01A252",
    "terminal.ansiMagenta": "#A16A94",
    "terminal.ansiRed": "#DB2D20",
    "terminal.ansiWhite": "#A5A2A2",
    "terminal.ansiYellow": "#FDED02",
    // Editor styling
    "editor.lineHighlightBackground": "#2c3e50", // color of the current line highlight
    "titleBar.activeForeground": "#A5A2A2", // color of the active window title bar
    // Editor widget (CTRL + P menu) and list (of recommendations for autocompletion)
    "editorWidget.foreground": "#ffffff", // color of the CTRP + P menu
    "editorWidget.background": "#2c3e50", // background color of the CTRP + P menu
    "editorWidget.border": "#ffffff",
    "editorSuggestWidget.background": "#2c3e50" // background color of the list of recommendations for autocompletion
  },
  "terminal.integrated.defaultProfile.windows": "Windows PowerShell",
  "terminal.integrated.enableBell": true,
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "Windows PowerShell": {
      "path": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
    }
  },
  "fiveServer.php.executable": "C:/xampp/php/php.exe",
  "fiveServer.php.ini": "C:/xampp/php.ini",
  "window.zoomLevel": 1,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.unicodeHighlight.allowedCharacters": {
    "â€™": true
  },
  "workbench.statusBar.visible": false, // hide status bar at bottom of screen
  "todo-tree.general.showActivityBarBadge": true, // show todo count in activity bar (left side of screen)
  "editor.minimap.enabled": false,
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "workbench.activityBar.location": "top",
  "terminal.integrated.fontFamily": "Hack Nerd Font Mono",
  "terminal.integrated.fontWeight": "600",
  "terminal.integrated.fontSize": 16, // terminal font size
  "explorer.copyRelativePathSeparator": "/",
  "accessibility.dimUnfocused.enabled": true,
  "accessibility.dimUnfocused.opacity": 0.35
}